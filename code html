    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Player state
            let isPlaying = false;
            const playPauseButton = document.querySelector('.play-pause');
            const player = document.querySelector('.player');
            const progressFill = document.querySelector('.progress-fill');
            const progressTrack = document.querySelector('.progress-track');
            
            // Play/Pause functionality
            playPauseButton.addEventListener('click', function() {
                isPlaying = !isPlaying;
                if (isPlaying) {
                    this.textContent = '⏸';
                    player.classList.add('playing');
                    simulatePlayback();
                } else {
                    this.textContent = '▶';
                    player.classList.remove('playing');
                }
            });
            
            // Progress bar interaction
            progressTrack.addEventListener('click', function(e) {
                const rect = this.getBoundingClientRect();
                const clickPosition = e.clientX - rect.left;
                const percentage = (clickPosition / rect.width) * 100;
                progressFill.style.width = Math.min(Math.max(percentage, 0), 100) + '%';
            });
            
            // Card hover effects with play button
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.addEventListener('click', function() {
                    // Simulate playing the selected track
                    const title = this.querySelector('.card-title').textContent;
                    const artist = this.querySelector('.card-subtitle').textContent.split('•')[1]?.trim() || 'Unknown Artist';
                    
                    document.querySelector('.track-name').textContent = title;
                    document.querySelector('.track-artist').textContent = artist;
                    
                    // Set to playing state
                    isPlaying = true;
                    playPauseButton.textContent = '⏸';
                    player.classList.add('playing');
                    simulatePlayback();
                });
            });
            
            // Navigation items
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => {
                item.addEventListener('click', function() {
                    navItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // Simulate playback progress
            function simulatePlayback() {
                if (!isPlaying) return;
                
                let progress = parseFloat(progressFill.style.width) || 0;
                
                const interval = setInterval(() => {
                    if (!isPlaying) {
                        clearInterval(interval);
                        return;
                    }
                    
                    progress += 0.1;
                    if (progress >= 100) {
                        progress = 0;
                        // Simulate track ending and next track starting
                        const randomCard = cards[Math.floor(Math.random() * cards.length)];
                        const title = randomCard.querySelector('.card-title').textContent;
                        const artist = randomCard.querySelector('.card-subtitle').textContent.split('•')[1]?.trim() || 'Unknown Artist';
                        
                        document.querySelector('.track-name').textContent = title;
                        document.querySelector('.track-artist').textContent = artist;
                    }
                    
                    progressFill.style.width = progress + '%';
                }, 100);
            }
            
            // Volume control
            const volumeBar = document.querySelector('.volume-bar');
            const volumeFill = document.querySelector('.volume-fill');
            
            volumeBar.addEventListener('click', function(e) {
                const rect = this.getBoundingClientRect();
                const clickPosition = e.clientX - rect.left;
                const percentage = (clickPosition / rect.width) * 100;
                volumeFill.style.width = Math.min(Math.max(percentage, 0), 100) + '%';
            });
            
            // Search functionality
            const searchInput = document.querySelector('input[type="text"]');
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    alert('Searching for: ' + this.value);
                    this.value = '';
                }
            });
        });
    </script>
</body>
